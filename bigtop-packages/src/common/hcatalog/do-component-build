set -ex

BUILD_OPTS="-Dversion=${FULL_VERSION} -Dforrest.home=$FORREST_HOME \
            -Dreactor.repo=file://${HOME}/.m2/repository           \
            -Dmvn.hadoop.profile=hadoop23"


ant $BUILD_OPTS src-release package "$@"

rm -rf build/hcatalog-${FULL_VERSION}*
mkdir build/hcatalog-${FULL_VERSION}
for i in build/*.tar.gz ; do
  tar -C build/hcatalog-${FULL_VERSION} --strip-components=1 -xzf $i
done
(cd build ; tar czf hcatalog-${FULL_VERSION}.tar.gz hcatalog-${FULL_VERSION})
