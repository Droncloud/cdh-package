DAEMON="sqoop-server"
DESC="Sqoop Server"
EXEC_PATH="/usr/lib/sqoop/bin/sqoop.sh"
SVC_USER="sqoop"
DAEMON_FLAGS=""
CONF_DIR="/etc/sqoop/conf"
PIDFILE="/var/run/sqoop/sqoop-server-$SVC_USER.pid"
LOCKDIR="/var/lock/subsys"
LOCKFILE="sqoop-server"

generate_functions() {

cat <<'__EOT__'
sqoop_env() {
  export SQOOP_USER="$SVC_USER"
  export SQOOP_CONFIG="$CONF_DIR"
  export SQOOP_LOG=${SQOOP_LOG:-"/var/log/sqoop/"}
  export SQOOP_TEMP="$(dirname $PIDFILE)"
  export SQOOP_SLEEP_TIME="$SLEEP_TIME"
  export SQOOP_PID="$PIDFILE"
  export CATALINA_BIN="/usr/lib/bigtop-tomcat/bin"
  export CATALINA_PID="$PIDFILE"
  export CATALINA_TMPDIR="/var/tmp/sqoop"
  export CATALINA_OPTS="-Xmx1024m -cp ${LIB_DIR}:${LIB_DIR}/lib"
  export CATALINA_OUT="${SQOOP2_LOG}/sqoop-server.log"
}
__EOT__

}

generate_start() {

cat <<'__EOT__'
start() {
  [ -x $EXEC_PATH ] || exit $ERROR_PROGRAM_NOT_INSTALLED
  [ -d $CONF_DIR ] || exit $ERROR_PROGRAM_NOT_CONFIGURED
  log_success_msg "Starting ${DESC}: "

  sqoop_env
  . /usr/lib/sqoop/bin/sqoop-env.sh

  su -s /bin/bash -c "${EXEC_PATH} server start $DAEMON_FLAGS" $SQOOP2_USER

  for second in {5..0}
  do
    checkstatusofproc
    RETVAL=$?
    if [ "$RETVAL" -eq $RETVAL_SUCCESS ] ; then
      break
    fi
    sleep 1
  done

  [ $RETVAL -eq $RETVAL_SUCCESS ] && touch $LOCKFILE
  return $RETVAL
}
__EOT__

}

generate_stop() {

cat <<'__EOT__'
stop() {
  log_success_msg "Stopping ${DESC}: "
  # FIXME: workaround for BIGTOP-537
  checkstatusofproc
  if [ "$?" = "$STATUS_RUNNING" ] ; then

    sqoop_env
    . /usr/lib/sqoop/bin/sqoop-env.sh

    su -s /bin/bash $SVC_USER -c "${EXEC_PATH} server stop"

    if [ -f $PIDFILE ]; then
      PID=`cat $PIDFILE`
      if [ -n $PID ]; then
        kill -TERM $PID &>/dev/null
        for i in `seq 1 ${SQOOP2_SHUTDOWN_TIMEOUT}` ; do
          kill -0 ${SQOOP2_PID} &>/dev/null || break
          sleep 1
        done
        kill -KILL ${SQOOP2_PID} &>/dev/null
      fi
    fi

    RETVAL=$?
  else
    RETVAL=$RETVAL_SUCCESS
  fi

  [ $RETVAL -eq $RETVAL_SUCCESS ] && rm -f $LOCKFILE $PIDFILE
}
__EOT__

}
